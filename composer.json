{
    "name": "venturedrake/laravel-crm-starter",
    "description": "Install and setup a complete Laravel CRM application",
    "keywords": [
        "venturedrake",
        "laravel",
        "free crm",
        "open source crm",
        "CRM",
        "laravel-crm",
        "laravel crm",
        "laravel crm package",
        "contact management",
        "contact management system",
        "customer management",
        "customer relationship management",
        "lead management",
        "sales management",
        "crm system",
        "crm online",
        "crm platform"
    ],
    "homepage": "https://github.com/venturedrake/laravel-crm",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Andrew Drake",
            "email": "andrew@venturedrake.com",
            "homepage": "https://venturedrake.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^9.19",
        "laravel/sanctum": "^3.0",
        "laravel/tinker": "^2.7",
        "symfony/http-client": "^6.3",
        "symfony/mailgun-mailer": "^6.3",
        "venturedrake/laravel-crm": "v1.x-dev"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.12",
        "fakerphp/faker": "^1.9.1",
        "laravel/breeze": "^1.18",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon",
        "format": "vendor/bin/pint -v",
        "format-test": "vendor/bin/pint -v --test"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../Packages/laravel-crm"
        }
    ]
}
